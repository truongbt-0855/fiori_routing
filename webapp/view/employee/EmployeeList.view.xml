<mvc:View
    controllerName="fiori.routing.controller.employee.EmployeeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="employeeListPage"
        title="{i18n>EmployeeList}"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapuiResponsiveContentPadding"
    >
        <content>
            <List
                id="employeeList"
                headerText="{i18n>ListOfAllEmployees}"
                items="{/Employees}"
            >
                <items>
                    <StandardListItem
                        title="{Firstname} {LastName}"
                        iconDensityAware="false"
                        iconInset="false"
                        type="Navigation"
                        press=".onListItemPressed"
                    />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
